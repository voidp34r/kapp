{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "jest": true
  },
  "presets": ["es2015"],
  "plugins": [
    "transform-class-properties",
    "transform-react-jsx",
    "transform-object-rest-spread",
    ["module-resolver", {
      "root": ["./src"]
      }],
      ["import-rename", {"^(.*)\\.jsx$": "$1"}]
    ],
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "*": [
          "src/*"
        ]
      }
    }
  }
